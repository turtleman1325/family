<p id="notice"><%= notice %></p>

<h1>Contacts</h1><%= button_tag 'Sort by name' %>

<br>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last Name</th>
      <th>Department</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to contact.full_name, edit_contact_path(contact) %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.department.try(:name) %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Remove Contact', contact, method: :delete, data: { confirm: "Delete?" } %></td>
      </tr>
    <% end %>
    <tr>
      <td>
        <br><br><%= button_to 'New Contact', new_contact_path, :method => :get %>
      </td>
      <td>
        <br><br><%= button_to 'Manage Departments', departments_path, :method => :get %>
      </td>
    </tr>
  </tbody>
</table>
<br>
<table>
  <thead>
    <tr>
      <th>
        Last Name
      </th>
    </tr>
  </thead>
  <tbody>
  <% @contacts.each do |contact| %>
  <tr>
    
  </tr>
  <td><%= contact.last_name %></td>
  <% end %>
</tr>
</tbody>
</table>
